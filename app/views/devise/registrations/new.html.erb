<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="card shadow-sm">
        <div class="card-body p-4">
          <h2 class="text-center mb-4">Créer un compte</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-3">
              <%= f.label :email, "Adresse email", class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "Mot de passe", class: "form-label" %>
              <% if @minimum_password_length %>
                <div class="form-text">(<%= @minimum_password_length %> caractères minimum)</div>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, "Confirmation du mot de passe", class: "form-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :company_search, "Rechercher votre entreprise", class: "form-label" %>
              <%= f.text_field :company_search, 
                  class: "form-control",
                  data: {
                    controller: "company-search",
                    "company-search-target": "input"
                  },
                  placeholder: "Commencez à taper le nom ou SIRET de votre entreprise" %>
            </div>

            <div class="mb-3">
              <%= f.label :company_name, "Nom de l'entreprise", class: "form-label" %>
              <%= f.text_field :company_name, 
                  class: "form-control",
                  data: { "company-search-target": "companyName" },
                  readonly: true %>
            </div>

            <div class="mb-3">
              <%= f.label :siret, "Numéro SIRET", class: "form-label" %>
              <%= f.text_field :siret, 
                  class: "form-control",
                  maxlength: 14,
                  data: { "company-search-target": "siret" },
                  readonly: true %>
              <div class="form-text">14 chiffres sans espaces</div>
            </div>

            <div class="mb-3">
              <%= f.label :phone, "Téléphone", class: "form-label" %>
              <%= f.telephone_field :phone, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :account_type, "Type de compte", class: "form-label" %>
              <%= f.select :account_type,
                  [
                    ["Industriel", "industrial"],
                    ["Maître d'œuvre", "project_manager"],
                    ["Entreprise", "company"]
                  ],
                  { prompt: "Sélectionnez votre type de compte" },
                  class: "form-select",
                  data: { 
                    controller: "category-select",
                    action: "change->category-select#updateSubcategories"
                  } %>
            </div>

            <div class="mb-3">
              <%= f.label :business_subcategory, "Profession", class: "form-label" %>
              <%= f.select :business_subcategory,
                  [],
                  { prompt: "Sélectionnez d'abord un type de compte" },
                  class: "form-select",
                  data: { "category-select-target": "subcategorySelect" } %>
            </div>

            <div class="mb-3">
              <%= f.label :company_type, "Type d'entreprise", class: "form-label" %>
              <%= f.select :company_type,
                  ["SARL", "SAS", "SA", "EURL", "Auto-entrepreneur", "Autre"],
                  { prompt: "Sélectionnez le type d'entreprise" },
                  class: "form-select" %>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit "S'inscrire", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
