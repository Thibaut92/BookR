<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-sm">
        <div class="card-body p-4">
          <h2 class="text-center mb-4">Connexion</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
              <%= f.label :email, "Adresse email", class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "Mot de passe", class: "form-label" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mb-3 form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label" %>
              </div>
            <% end %>

            <div class="d-grid gap-2">
              <%= f.submit "Se connecter", class: "btn btn-primary" %>
            </div>
          <% end %>

          <div class="mt-3 text-center">
            <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "text-decoration-none" %>
          </div>

          <hr class="my-4">

          <div class="text-center">
            <p class="mb-2">Pas encore de compte ?</p>
            <%= link_to "Créer un compte", new_registration_path(resource_name), class: "btn btn-outline-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
