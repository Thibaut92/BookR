<div class="dropdown">
  <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
    Actions
  </button>
  <ul class="dropdown-menu">
    <% if meeting.proposed? %>
      <li>
        <%= button_to accept_meeting_path(meeting), method: :patch, class: "dropdown-item text-success" do %>
          <i class="bi bi-check-lg me-2"></i>Accepter le rendez-vous
        <% end %>
      </li>
      <li>
        <%= button_to reject_meeting_path(meeting), method: :patch, class: "dropdown-item text-danger" do %>
          <i class="bi bi-x-lg me-2"></i>Refuser le rendez-vous
        <% end %>
      </li>
    <% end %>
    
    <% if meeting.accepted? %>
      <li>
        <%= button_to complete_meeting_path(meeting), method: :patch, class: "dropdown-item" do %>
          <i class="bi bi-check-circle me-2"></i>Marquer comme complété
        <% end %>
      </li>
    <% end %>
    
    <li><hr class="dropdown-divider"></li>
    <li>
      <%= button_to meeting_path(meeting), 
          method: :delete, 
          class: "dropdown-item text-danger",
          data: { confirm: "Êtes-vous sûr de vouloir supprimer ce rendez-vous ?" } do %>
        <i class="bi bi-trash me-2"></i>Supprimer
      <% end %>
    </li>
  </ul>
</div>
